RewriteEngine	On

# Quick and dirty URL rewrites for each page
RewriteRule		^mining$			mining.php			[NC]
RewriteRule		^minting$			minting.php			[NC]
RewriteRule		^buying$			buying.php			[NC]
RewriteRule		^resources$			resources.php		[NC]
RewriteRule		^downloads$			downloads.php		[NC]
RewriteRule		^interview$			interview.php		[NC]
RewriteRule		^whitepaper$		whitepaper.php		[NC]

# 301 Redirects to keep SEO score on previous URLs
RewriteRule		^mining\.php$		http://www.peercoin.net/mining [R=301]
RewriteRule		^minting\.php$		http://www.peercoin.net/minting [R=301]
RewriteRule		^buying\.php$		http://www.peercoin.net/buying [R=301]
RewriteRule		^resources\.php$	http://www.peercoin.net/resources [R=301]
RewriteRule		^downloads\.php$	http://www.peercoin.net/downloads [R=301]
RewriteRule		^interview\.php$	http://www.peercoin.net/interview [R=301]
RewriteRule		^whitepaper\.php$	http://www.peercoin.net/whitepaper [R=301]